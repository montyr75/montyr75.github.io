<root
    xmlns="http://certiport.com/hammer/2.x/slide" type="slide">
    <view image="#images/backstage/file_info.jpg" width="959" height="599">
        <button x="169" y="131" class="hotspot ribbon-button" width="80" height="84" toggle="true" id="personal_settings_btn">
            <events click="open_personal_menu"></events>
        </button>
        <button x="710" y="131" class="hotspot ribbon-button" width="80" height="84" id="view_sync_btn">
            <events click="not_implemented"></events>
        </button>
        <button x="169" y="258" class="hotspot ribbon-button" width="80" height="84" id="class_notes_settings_btn">
            <events click="open_class_notes_menu"></events>
        </button>
        <button x="818" y="131" class="hotspot ribbon-button" width="80" height="84" id="open_backups_btn">
            <events click="not_implemented"></events>
        </button>

    </view>
    <model persist="true"></model>
    <commands>
        <command name="open_personal_menu">
            <menu src="#views/slides/onenote/menus/personal_settings_menu.xml" modal="true" group="menu" depth="1" direction="bottom"></menu>
        </command>
        <command name="open_class_notes_menu">
            <menu src="#views/slides/onenote/menus/class_notes_settings_menu.xml" modal="true" group="menu" depth="1" direction="bottom"></menu>
        </command>
    </commands>
</root>